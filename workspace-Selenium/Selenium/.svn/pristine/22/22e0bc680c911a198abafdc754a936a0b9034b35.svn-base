package TST_025_Cadastrar_Cartao;


import org.junit.*;

import static org.junit.Assert.*;

import org.openqa.selenium.*;

import br.com.specto.auxiliar.MetodosAuxiliares;
import br.com.specto.entidades.CartaoVisitante;


public class ApagarCartaoUsuarioRegular{
 
	private  WebDriver driver;
	private StringBuffer verificationErrors = new StringBuffer();
	private CartaoVisitante cartao;//Uitlizando  classe CartaoVisitante, pois é ela que tem o número do cartão editado (Visitante para Usuário Regular)
	private MetodosAuxiliares login;
	

	@Before
	public void setUp() throws Exception {
	  
		this.cartao = new CartaoVisitante();
		this.login = new MetodosAuxiliares();
    
	}

	
	@Test
	public void apagarCartaoUsuarioRegularVisact() throws Exception {
		
		System.out.println("Iniciando o teste para a exclusão de Cartão do Tipo Usuário Regular");
    
		try{
		
			driver = login.executaLoginManual();
	
			//Login Automático
			//driver.findElement(By.id("VA_server")).click();

			driver.findElement(By.id("mainMenu_ami0-header")).click();
			driver.findElement(By.id("menuCards_tmi0-title")).click();
			driver.findElement(By.linkText("Cartão")).click();
       	   
			//Recuperar o id no banco referente ao nome do Tipo de Cartão recem editada
			String s_idCartao = "" + cartao.encontraIdCartao(cartao.getNumeroParaEdicao());
			
			driver.manage().window().maximize();
			
			//Altera para a última página dos cartões cadastrados, pois é onde o cartão a ser apagado se encontra
			driver.findElement(By.xpath("//*[ contains(@src, '/VisActAccessServer/themes/athena/img/jmesa/lastPage.gif')]")).click();
			    
			//Marca o Tipo de Cartão para deletar.
			driver.findElement(By.id(s_idCartao)).click();
      
			//Excluir o Tipo de Cartão
			driver.findElement(By.xpath("//*[ contains(@src, '/VisActAccessServer/themes/athena/img/delete.gif')]")).click();
    
    		//**** Tratando o Alerta
   
    		//Obtem o alerta aberto.
			Alert alert = driver.switchTo().alert();
    
			//Obtem o texto do alerta. 
			alert.getText();
    
			//Posso validar a mensagem do alerta
			//assertTrue(driver.switchTo().alert().getText().equals("Deseja realmente executar esta operação?"));
    
			//Equivalente ao click em OK no alerta.
			alert.accept();
    
			//****
    
			//Capturando a mensagem de validação após o Tipo de Cartão ser deletado
			String msgValidacaoDeletarCartao = driver.findElement(By.xpath("/html/body/div[3]/div[6]/div[2]/div[2]/div/table/tbody/tr/td[2]")).getText();
    		
    		try{
    			
    			//Retorna o número do cartão com os devidos pontos inseridos, conforme msg de validação
				String numeroCartaoComPontos = cartao.retornaNumeroComPontos(cartao.getNumeroParaEdicao());
				
    			//validando a mensagem de validação
    			assertEquals("Cartão [" + numeroCartaoComPontos + "] removido com sucesso!", msgValidacaoDeletarCartao);
    			
    			System.out.println("Caso de Teste Apagar Cartão do Tipo Regular executado com sucesso!");
        		
    		}catch (AssertionError erroValidaMensagemExclusaoCartao){
    		
    			System.out.println("Erro ao executar o Caso de Teste Apagar Cartão do Tipo Usuário Regular!");
    			
    			throw erroValidaMensagemExclusaoCartao;
    			
    		}finally{
    			
    			//Fechar a tela com a lista de Tipo de Cartões.
    			driver.findElement(By.xpath("//*[contains(@title, 'Fechar')]")).click();
    			//Tambem funciona: driver.findElement(By.xpath("//*[ contains(@src, '/VisActAccessServer/themes/athena/img/close.gif')]")).click();
    				
    			//Sleep. Para Debug.
    			Long end = System.currentTimeMillis() + 3000;
    			while (System.currentTimeMillis() < end) {}  
        			    
    			
    			//Selecionando o botão Sair da Aplicação.
    			driver.findElement(By.cssSelector("input[type=\"button\"]")).click();
    			
    		}	
		    
		}catch (Exception erroConsultaIdRegiao){
			
			System.out.println(erroConsultaIdRegiao);
			
			throw  erroConsultaIdRegiao;
		
		}
 	}
  
  
	@After
	public void tearDown() throws Exception {
		
		driver.quit();
		
		String verificationErrorString = verificationErrors.toString();
		
		if (!"".equals(verificationErrorString)) {
			fail(verificationErrorString);
		}
	}
	
}
